<Window x:Class="S.E.NDS.CourierDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Courier Submission" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0">Name of Courier:</Label>
        <TextBox Name="CourierName" Grid.Column="1" Grid.Row="0" MinWidth="200" />
        
        <WrapPanel Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Right" Margin="0,10,0,10">
            <Button Name="btn_CourierOk" IsDefault="True" MinWidth="60" Margin="0,0,10,0" Click="btn_CourierOk_Click">Ok</Button>
            <Button IsCancel="True" MinWidth="60">Cancel</Button>
        </WrapPanel>

    </Grid>
</Window>
